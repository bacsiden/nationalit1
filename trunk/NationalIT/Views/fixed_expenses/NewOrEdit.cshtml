@model NationalIT.fixed_charges
@{
    ViewBag.Title = "Fixed charges";
}
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                <h3>
                    <i class="icon-table"></i>@ViewBag.Title</h3>
            </div>
            <div class="box-content">
                <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
                <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
                @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.ValidationSummary(true) 
                    @Html.HiddenFor(model => model.Id)
                    
                    <div class="control-group">
                        <label class="control-label" for="Frequency">@Html.LabelFor(model => model.Frequency)</label>
                        <div class="controls">
                            <div class="span12">
                                @*<input type="text" name="username" id="username" class="input-xlarge" data-rule-required="true" data-rule-minlength="3" />*@
                                @Html.TextBoxFor(model => model.Frequency, new { @class = "input-xlarge" })
                                @Html.ValidationMessageFor(model => model.Frequency)
                            </div>
                        </div>
                    </div>
                    @*<div class="control-group">
                        <label class="control-label" for="Duration">@Html.LabelFor(model => model.Duration)</label>
                        <div class="controls">
                            <div class="span12">
                                @Html.TextBoxFor(model => model.Duration, new { @class = "input-xlarge" })
                                @Html.ValidationMessageFor(model => model.Duration)
                            </div>
                        </div>
                    </div>*@
                    <div class="control-group">
                        <label class="control-label" for="Type">@Html.LabelFor(model => model.Type)</label>
                        <div class="controls">
                            <div class="span12">
                                @Html.TextBoxFor(model => model.Type, new { @class = "input-xlarge" })
                                @Html.ValidationMessageFor(model => model.Type)
                            </div>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="Amount">@Html.LabelFor(model => model.Amount)</label>
                        <div class="controls">
                            <div class="span12">
                                @Html.TextBoxFor(model => model.Amount, new { @class = "input-xlarge" }) ($)
                                @Html.ValidationMessageFor(model => model.Amount)
                            </div>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="DriverId">@Html.LabelFor(model => model.DriverId)</label>
                        <div class="controls">
                            <div class="span12">
                                <select data-placeholder="Select DriverId" name="DriverId" class="chosen-with-diselect input-xlarge">
                                    @Html.Raw(ViewBag.dataDriver_Info)
                                </select>
                                @Html.ValidationMessageFor(model => model.DriverId)
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        @Html.Partial("_ShowSaveEdit")
                    </div>
                }
            </div>
        </div>
    </div>
</div>
