@model List<NationalIT.Temp_Split_Expenses>
           <h5>@Html.ActionLink("Driver's Expenses", "Index", "SplitExpenses", new {idndex=1},null)</h5>
<div id="DriverExpensesSplit" class="boxScroll">    
    <table class="table">
        <tr>
            <th>
                <input type="checkbox" name="" value="" class="SplitcheckAll" />
            </th>
            @*<th>
                ID
            </th>
            <th>
                Owner
            </th> *@
            <th>
                Date
            </th>
            <th>
                Expenses
            </th>
            <th>
                Amount
            </th>
            @*
            <th>
                Fee Charged
            </th>
            <th>
                Current Payroll
            </th>
            <th>
                Paid Off
            </th>*@
        </tr>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
            <tr>
                <td>
                    <input type="checkbox" name="checkOwner" value="@item.Amount" getID="@item.ID" class="Splitcheckitem"/>
                </td>                
                <td>
                    @(item.Date.HasValue ? item.Date.Value.ToString("MM/dd/yyyy") : "")
                </td>
                <td>
                    @item.Expenses
                </td>
                <td>
                    @String.Format("{0:C}", item.Amount)
                </td>
                
            </tr>
            }
        }
    </table>
</div>
