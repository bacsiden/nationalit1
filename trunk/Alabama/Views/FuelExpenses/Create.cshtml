                            @Html.LabelFor(model => model.Current_Payroll)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Current_Payroll)
                            @Html.ValidationMessageFor(model => model.Current_Payroll)
                        </div>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.fee_charged)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.fee_charged)
                            @Html.ValidationMessageFor(model => model.fee_charged)
                        </div>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Fuel_Card)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Fuel_Card)
                            @Html.ValidationMessageFor(model => model.Fuel_Card)
                        </div>
                        <p>
                            <input type="submit" value="Create" class="btn btn-info"/>
                            @Html.ActionLink("Back to List", "Index", null, new { @class="btn"})
                        </p>
                }
            </div>
        </div>
    </div>
</div>
