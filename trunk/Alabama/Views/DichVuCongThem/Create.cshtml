@model Alabama.DichVuCongThem
<h3>
    Thêm mới </h3>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@Html.ValidationSummary(true, "Thêm mới không thành công")
@using (Html.BeginForm("Create", "DichVuCongThem"))
{
    <div>
        <div class="control-group">
            <label class="control-label">
                Tên dịch vụ cộng thêm</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.Name)
            </div>
            <label class="control-label">
                Giá</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.Cost)
            </div>
            <input type="submit" value="OK" class="btn btn-primary"/>
            <button type="button" class="btn" onclick="javascript:window.history.go(-1);">
                Hủy</button>
        </div>
    </div>
}