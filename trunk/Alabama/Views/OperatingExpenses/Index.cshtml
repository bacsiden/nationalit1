@model Webdiyer.WebControls.Mvc.PagedList<Alabama.Operating_Expenses>
@using Webdiyer.WebControls.Mvc;
<h3>Driver Info</h3>
<p style="margin-left: 7px;">
    @Html.ActionLink("Create New", "NewOrEdit", null, new { @class = "btn btn-info addNewItem" })
    @Html.ActionLink("Edit", "NewOrEdit", null, new { @class = "btn btn-info EditItem" })
    @Html.ActionLink("Delete", "Delete", null, new { @class = "btn btn-danger DeleteItem confirmDelete" })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <input type="checkbox" name="" value="" class="checkAll" />
            </th>
            <th>
                ID
            </th>
            <th>
                First Name
            </th>
            <th>
                Current Payroll
            </th>
            <th>
                Date
            </th>
            <th>
                Amount
            </th>
            <th>
                Driver
            </th>
            <th>
                Paid_off
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" name="checkOwner" value="@item.ID" class="checkitem"/>
                </td>
                <td>
                    <a href="/DriverInfo/NewOrEdit/@item.ID" style="color: #0072BC;">@item.ID</a>
                </td>
                <td>
                    @Html.Raw(item.Driver_Info != null ? item.Driver_Info.First_name : "")
                </td>
                <td>
                    @item.Current_Payroll
                </td>
                <td>
                    @item.Date
                </td>
                <td>
                    @item.Amount
                </td>
                <td>
                    @item.Driver_Info
                </td>
                <td>
                    @item.Paid_off
                </td>
                @*<td>
                        <a href="/CreatedCard/Details/@item.CreatedCardID" style="color: #0072BC;">@item.CreatedCard.Note</a>
                    </td>*@
            </tr>
        }
    </tbody>
</table>
<div style="text-align: center; margin-bottom: 10px; padding: 5px 10px; font-size: 13px;">
@Html.Pager(Model, new PagerOptions { PageIndexParameterName = "page", CurrentPagerItemWrapperFormatString = "<b>{0}</b>", CurrentPageNumberFormatString = "[{0}]", FirstPageText = "<<", LastPageText = ">>", NextPageText = ">", PrevPageText = "<" })
