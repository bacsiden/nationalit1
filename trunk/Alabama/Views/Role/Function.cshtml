@model Alabama.Role1
<h3>
    Thêm chức năng cho: <a href="/Group/UsersInGroup/@Model.ID">@Model.Name</a></h3>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@Html.ValidationSummary(true, "Thêm chức năng vào quyền không thành công")
@using (Html.BeginForm("DoFunction", "Role", new { roleID = Model.ID }))
{
    <div>
        @Html.Hidden("listCheck", null, new { id = "HiddenListRole" })
        <div class="control-group">
            <label class="control-label">
                Nhóm quyền</label>
            <div class="controls" id="ListRoles">
                @Html.Raw(ViewBag.listFuntion)
            </div>
        </div>
        <div class="control-group">
            <input type="submit" value="OK" class="btn btn-primary" id="SubmitRole" />
            @Html.ActionLink("Hủy", "index", null, new { @class = "btn" })
        </div>
    </div>
}