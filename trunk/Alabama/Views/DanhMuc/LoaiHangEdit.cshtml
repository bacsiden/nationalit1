@model Alabama.LoaiHang
<h3>
    Sửa loại hàng </h3>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@Html.ValidationSummary(true, "Sửa không thành công")
@using (Html.BeginForm("LoaiHangEdit", "DanhMuc",Model))
{
    <div>
        <div class="control-group">
            <label class="control-label">
                Tên hàng</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.Title)
            </div>
            <label class="control-label">
                Hệ số</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.HeSo)
            </div>
            <input type="submit" value="OK" class="btn btn-primary"/>
            <button type="button" class="btn" onclick="javascript:window.history.go(-1);">
                Hủy</button>
        </div>
    </div>
}