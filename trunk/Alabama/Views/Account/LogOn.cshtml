    <!-- BEGIN Main Content -->
    <div class="login-wrapper">
        <!-- BEGIN Login Form -->
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form-login" }))
        {
            @Html.ValidationSummary(true, "Đăng nhập thất bại!")
            
            <h3>
                Đăng nhập hệ thống</h3>

            <hr />

            <div class="control-group">
                <div class="controls">
                    @Html.ValidationMessageFor(m => m.UserName, "")
                    @Html.TextBoxFor(m => m.UserName, new { @class = "input-block-level", placeholder = "Tên đăng nhập" })                    
                </div>
            </div>

            <div class="control-group">
                <div class="controls">
                    @Html.ValidationMessageFor(m => m.Password, "")
                    @Html.PasswordFor(m => m.Password, new { @class = "input-block-level", placeholder = "Mật khẩu" })
                    
                </div>
            </div>

            <div class="control-group">
                <div class="controls">
                    <label class="checkbox">
                        @*<input type="checkbox" value="remember" />
                        Remember me*@
                        @Html.CheckBoxFor(m => m.RememberMe)
                        Ghi nhớ lần sau
                    </label>
                </div>
            </div>

            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn btn-primary input-block-level">
                        Đăng nhập</button>
                </div>
            </div>

            <hr />

            <p class="clearfix">
                @*<a href="#" class="goto-forgot pull-left">Forgot Password?</a>*@
                @Html.ActionLink("Đăng ký", "Register", null, new { @class = "goto-register pull-right" })
            </p>
        }
        <!-- END Login Form -->
