@model Webdiyer.WebControls.Mvc.PagedList<NationalIT.Trip_Info>
@using Webdiyer.WebControls.Mvc;
<h3>
    Pending Trips</h3>
<p style="margin-left: 7px;">
    <img src="/Content/img/add.png" width="14" height="14" style="padding-bottom: 2px;" />
    @Html.ActionLink(" Add new", "Create", "TripInfo", null, new { @class = "btnThemMoi" })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Trip ID
            </th>
            <th>
                Order date
            </th>
            <th>
                Pickup data
            </th>
            <th>
                Delivery date
            </th>
            <th>
                Delivername
            </th>
            <th>
                Customer
            </th>
            <th>
                Address
            </th>
        </tr>
    </thead>
    <tbody>
        @{int i = 0;}
        @if (Model!=null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
            <tr>
                <td>
                    @item.Trip_ID
                </td>
                <td>
                    @item.Order_date
                </td>
                <td>
                    @item.Pickup_date
                </td>
                <td>
                    @item.Delivery_date
                </td>
                <td>
                    @(item.Driver != null ? item.Driver_Info.First_name : null)
                </td>
                <td>
                    @item.Customer
                </td>
                @*<td>
                        <a href="/CreatedCard/Details/@item.CreatedCardID" style="color: #0072BC;">@item.CreatedCard.Note</a>
                    </td>*@
                <td>
                    @item.Address
                </td>
            </tr>
            }
        }
    </tbody>
</table>
<div style="text-align: center; margin-bottom: 10px; padding: 5px 10px; font-size: 13px;">
@Html.Pager(Model, new PagerOptions { PageIndexParameterName = "page", CurrentPagerItemWrapperFormatString = "<b>{0}</b>", CurrentPageNumberFormatString = "[{0}]", FirstPageText = "<<", LastPageText = ">>", NextPageText = ">", PrevPageText = "<" })