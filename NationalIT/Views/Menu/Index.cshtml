@model IEnumerable<Alabama.Menu>
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                <h3>
                    <i class="icon-table"></i>Quản lý menu</h3>
            </div>
            <div class="box-content">
                <p style="margin-left: 7px;">                    
                    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
                </p>
                <table class="table">
                    <thead>
                        <tr class="table-flag-blue">
                            <th>
                                Tiêu đề
                            </th>
                            <th>
                                Vị trí
                            </th>
                            <th>
                                Trạng thái
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.ActionLink(item.Title, "Edit", new { id = item.ID }, null)
                                </td>
                                <td>
                                    @item.Oder
                                </td>
                                <td>
                                    <a href="#" class="IsActive" getID="@item.ID">
                                        @if (item.IsActive == true)
                                        { <span>Đã bật</span>}
                                        else
                                        {<span class='validation-summary-errors'>Đã tắt</span>}</a>
                                </td>
                                <td>
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, new { @class = "confirmDelete" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

