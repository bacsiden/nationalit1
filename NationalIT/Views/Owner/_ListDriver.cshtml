@model List<NationalIT.Driver_Info>
@if (Model.Count > 0)
{
    <table class="table table-striped table-bordered dTableR">
        <thead>
            <tr>
                <th>
                    Driver ID
                </th>
                <th>
                    Driver fist name
                </th>
                <th>
                    Driver last name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                
                <tr class="rowlink">
                    <td>
                        @item.ID
                    </td>
                    <td>
                        @item.First_name
                    </td>
                    <td>
                        @item.Last_name
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h5>
    There is no driver associated with this onwer 
    </h5>
}