@model List<NationalIT.Company>
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                <h3>
                    <i class="icon-table"></i>List Company</h3>
            </div>
            <div class="box-content">
                <div class="row-fluid">
                    <div class="span12">
                        @Html.Partial("_MenuButtonNewEditOrDelete")
                    </div>
                </div>
                <table class="table table-advance">
                    <tr>
                        <th>
                            <input type="checkbox" name="" value="" class="checkAll" />
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            PhoneNumber
                        </th>
                        <th>
                            FaxNumber
                        </th>
                        <th>
                            Actived
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="checkOwner" value="@item.ID" class="checkitem"/>
                            </td>
                            <td>
                                @Html.ActionLink(item.Name, "NewOrEdit", new { id = item.ID })
                            </td>
                            <td>
                                @item.Address
                            </td>
                            <td>
                                @item.PhoneNumber
                            </td>
                            <td>
                                @item.FaxNumber
                            </td>
                            <td>
                                @NationalIT.CommonFunction.getYesNO(item.Actived)
                            </td>
                        </tr>
                    }
                </table>                
            </div>
        </div>
    </div>
</div>
