@model List<NationalIT.Temp_Split_Expenses>
           <h5>@Html.ActionLink("Owner's Expenses", "Index", "SplitExpenses", new { idndex = 2 }, null)</h5>
<div id="OwnerExpensesSplit" class="boxScroll">
    <table class="table">
        <tr>
            <th>
                <input type="checkbox" name="SplitcheckAll" value="" class="SplitcheckAll" />
            </th>
            @*<th>
                ID
            </th>
            <th>
                Driver
            </th>  *@
            <th>
                Date
            </th>
            <th>
                Expenses
            </th>
            <th>
                Amount
            </th>
            @*<th>
                Fee Charged
            </th>
            <th>
                Current Payroll
            </th>
            <th>
                Paid Off
            </th>*@
        </tr>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
            <tr>
                <td>
                    <input type="checkbox" name="checkOwner" value="@item.Amount" getID="@item.ID" class="Splitcheckitem"/>
                </td>
                @*<td>
                    @Html.ActionLink(item.Id.ToString(), "NewOrEdit", "SplitExpenses", new { id = item.Id }, null)
                </td>
                <td>
                    
                     @{
               if (item.OwnerDriver.HasValue)
               {
                   if (item.Idndex == 1)
                   {
                       var driver = NationalIT.DB.Entities.Driver_Info.FirstOrDefault(m => m.ID == item.OwnerDriver);
                       if (driver != null)
                       {
                        <span>@driver.Last_name @driver.First_name</span>
                       }
                   }
                   else
                   {
                       var owner = NationalIT.DB.Entities.Owners.FirstOrDefault(m => m.OwnerID == item.OwnerDriver);
                       if (owner != null)
                       {
                        <span>@owner.Name</span>
                       }
                   }
               }                        
                    }
                </td>     *@
                <td>
                    @(item.Date.HasValue ? item.Date.Value.ToString("MM/dd/yyyy") : "")
                </td>
                <td>
                    @item.Expenses
                </td>
                <td>
                    @String.Format("{0:C}", item.Amount)
                </td>
                @*
                <td>
                    @NationalIT.CommonFunction.getYesNO(item.Fee_Charged)
                </td>
                <td>
                    @NationalIT.CommonFunction.getYesNO(item.Current_Payroll)
                </td>
                <td>
                    @NationalIT.CommonFunction.getYesNO(item.Paid_Off)
                </td>*@
            </tr>
            }
        }
    </table>
</div>
