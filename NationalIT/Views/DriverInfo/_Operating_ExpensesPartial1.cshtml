<div class="boxScroll">
    @model List<NationalIT.Operating_Expenses>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" name="DriverOperating_ExpensesAll" value=" " class="DriverOperating_ExpensesAll" />
                </th>
                <th>
                    Date
                </th>
                <th>
                    Type
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Location
                </th>
                <th>
                    Driver
                </th>
                <th>
                    Description
                </th>
                <th>
                    Paid_off
                </th>
                <th>
                    Current_Payroll
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                <tr>
                    <td>
                        <input type="checkbox" name="DriverOperating_ExpensesItem" value="@item.ID" class="DriverOperating_ExpensesItem" />
                    </td>
                    <td>
                         @(item.Date.HasValue?item.Date.Value.ToShortDateString():"")
                    </td>
                    <td>
                        @item.Type
                    </td>
                    <td>
                        @String.Format("{0:F}", item.Amount)
                    </td>
                    <td>
                        @item.Location
                    </td>
                    <td>
                        @Html.Raw(item.Driver_Info != null ? item.Driver_Info.First_name : "")
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                         @(item.Paid_off.HasValue ? NationalIT.CommonFunction.getYesNO(item.Paid_off.Value) : "")
                    </td>
                    <td>
                        @(item.Current_Payroll.HasValue?NationalIT.CommonFunction.getYesNO(item.Current_Payroll.Value):"")
                    </td>
                    
                </tr>
                }
            }
        </tbody>
    </table>
</div>
