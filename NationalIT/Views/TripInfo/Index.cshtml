@using Webdiyer.WebControls.Mvc
@model PagedList<NationalIT.Trip_Info>
<div class="row-fluid">
    <div class="span12">
        <h3>
            Trip Info</h3>
        <div class="row-fluid">
            <div class="span12">
                @Html.Partial("_MenuButtonNewEditOrDelete")
                <div class="row-fluid">
                    <div class="wrap-selectTripInfo">
                        <div class="span2">
                            Driver paid<br />
                            <select class="Driver_paid_selection" style="width:80px">
                                <option value="0">No</option>
                                <option value="1">Yes</option>                                
                                <option value="2">-All-</option>
                            </select>
                        </div>
                        <div class="span4">
                            Invoice
                            <select data-placeholder="Select Invoice" name="Invoice" class="chosen-with-diselect-trip input-xlarge selectTripInfo">
                                @Html.Raw(ViewBag.dataTripInfo)
                            </select>
                        </div>
                        <div class="span4">
                            Driver info
                            <select data-placeholder="Select DriverInfo" name="Driver_Info" class="chosen-with-diselect-trip input-xlarge selectDriverInfoTrip">
                                @Html.Raw(ViewBag.dataDriver_Info)
                            </select>
                        </div>
                        <div class="cleardiv">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="wrap-AjaxPaging">
            @Html.Partial("_IndexPartial", Model)
        </div>
    </div>
</div>
